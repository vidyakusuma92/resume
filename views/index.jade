extends layout

block content
  
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navMain')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        #navMain.collapse.navbar-collapse
          ul.nav.navbar-nav.pull-right
            li
              a.nav-styles(href='#home') HOME
            li
              a.nav-styles(href='#about-me') ABOUT ME
            li
              a.nav-styles(href='#skills') SKILLS
            li
              a.nav-styles(href='#portfolio') PROJECTS
            li
              a.nav-styles(href='#contact-me') CONTACT ME
    #body-div(data-spy="scroll" data-target="#navMain")
    .parallax-window(id="home" data-parallax='scroll', data-image-src='https://static.pexels.com/photos/99586/pexels-photo-99586.jpeg')
      .layer
        .container
          .row
              .col-lg-4
              .col-lg-4
                .blur-box
                  .row
                    .col-lg-12.col-xs-12
                      img.img-circle.push-image-up(src='/images/vidya.jpg', alt='myimage')
                      .style
                          span.element
              .col-lg-4
    .jumbotron(id='about-me')
      .jumbotron-style
        = "I am a UI/UX designer based in Hyderabad and I love anything that says design,"
        br
        = " I make arts and crafts and also take an occational photo or two."
    .container-fluid
        .row(id='skills')
          .parallax-window-second(data-parallax='scroll', data-image-src='https://static.pexels.com/photos/139306/pexels-photo-139306.jpeg')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/sketch.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/css3.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/bootstrap.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/invision.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/html5.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/illustrator.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/photoshop.png')
              .col-lg-3.col-md-3.col-sm-6.col-xs-6.view-resume
                img.iconize(src='/images/github.png')
    .parallax-window-third(id="home" data-parallax='scroll', data-image-src='https://static.pexels.com/photos/213703/pexels-photo-213703.jpeg')  
      .container.portfolio
          .row.addpad(id='portfolio')
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              .pull-left.right-side
                .floating-dot-left
                h3 Get Moving 
                    span
                        a(href="http://www.getmoving.in", target="_blank")
                            img.inline-image(src='/images/browse.png')
                p
                    = "Get Moving is a new age logistics and transport service provider who is using technology to disrupt the current logistics supply chain and make business faster."
                .badge.portfolio-badge Interface Design | User Experience | Balsamiq | Sketch
          .row
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              .pull-right.left-side
                .floating-dot-right
                h3.pull-right
                    span.text-right
                        a(href="https://github.com/vidyakusuma92/angluarjs-restorante")
                            img.inline-image(src='/images/github.png')
                        = "Restaurant App"
                p.pull-right
                    = "A hypothetical restaurant selling fusion food like no other. You can see the menu, make reservations at the restaurant and even contact people at the restaurant at it's hypothetical location."
                .badge.portfolio-badge.pull-right AngularJs | Bootstrap | Node.js
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
          .row
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              .pull-left.right-side
                .floating-dot-left
                h3 Kitty Alert
                    span
                        a(href="/images/kitty-alert.png", target="_blank")
                            img.inline-image(src='/images/view.ico')
                p
                    = "A chrome extension that scans the page for an incident and shows a chrome notification whenever a new incident is added to the page, this extension makes incident notifications a breeze."
                .badge.portfolio-badge Javascript | ChromeExtension
          .row
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
              .pull-right.left-side.extend
                .floating-dot-right
                h3.text-right Ticket Tracker
                p
                    = "Ticket tracker application which is used to track the tickets for that day and the status of the tickets worked on them which can be viewed and updated by everyone in the team."
                .badge.portfolio-badge.pull-right AngularJs | Bootstrap | Node.js
            .col-lg-6.col-md-6.col-sm-6.col-xs-6
          .row
            .col-lg-12.col-sm-12.col-xs-12.view-resume
              a.btn.resume-btn(href='https://drive.google.com/open?id=0B_XM5evN-ZFUSWxqM3cwMVRyekk') View Resume
    .container-fluid.white
        .row.contact-section(id='contact-me')
          .col-lg-6.col-md-6.col-sm-12.col-xs-12.dark-background
            .leftycontact
              .row
                .col-lg-4
                .col-lg-8
                  h1.quickid QUICK ID
                  .row
                    .col-lg-8.underline-black
                  br
                  br
                  .row
                    .col-lg-4.col-sm-4.col-xs-4.quick
                      h4 Name
                    .col-lg-8.col-sm-8.col-xs-8
                      h4 Vidya Kusuma
                  .row
                    .col-lg-4.col-sm-4.col-xs-4.quick
                      h4.quickidpadding Email
                    .col-lg-8.col-sm-8.col-xs-8
                      h4 vidyakusuma92@gmail.com
                  .row
                    .col-lg-4.col-sm-4.col-xs-4.quick
                      h4.quickidpadding Address
                    .col-lg-8.col-sm-8.col-xs-8
                      h4 Hyderabad
                  
          .col-lg-6.col-md-6.col-sm-12.col-xs-12
            .rightycontact
              .row
                .col-lg-11.col-lg-offset-1.col-md-11.col-md-offset-1.col-sm-11.col-sm-offset-1.col-xs-11.col-xs-offset-1
                  h1.contact-me CONTACT ME
              .row
                .col-lg-11.col-lg-offset-1.col-md-11.col-md-offset-1.col-sm-11.col-sm-offset-1.col-xs-11.col-xs-offset-1
                  .underline.contact-me
              .row
                .col-lg-11.col-lg-offset-1.col-md-11.col-md-offset-1.col-sm-11.col-sm-offset-1.col-xs-11.col-xs-offset-1
                  form.form-horizontal.textcolor(onsubmit="return sendMessage(this)")
                    .formgroup
                      .row
                        .col-lg-4.col-md-4.col-xs-12.col-sm-12
                          input#firstname.input-style(type='text', name='firstname',placeholder='Name')
                        .col-lg-4.col-md-4.col-xs-12.col-sm-12
                          input#lastname.input-style(type='text', name='email',placeholder='Email')
                        .col-lg-4
                    .formgroup
                      .row
                        .col-lg-12.col-md-12.col-xs-12.col-sm-12
                          input#subject.input-style-subject(type='text', name='subject',placeholder='Subject')
                    //.col-lg-12
                      //h5.textmsg-style Message
                    .formgroup
                      .row
                        .col-lg-12.col-md-12.col-xs-12.col-sm-12
                          input#message.input-style-subject(type='textarea', name='body',placeholder='Message')
                    .col-lg-12.col-md-12.col-xs-12
                        input.send-button(type='submit', text='Send')
                        
    .container-fluid.footer
      .row
        .col-lg-4.col-md-4.col-sm-6.col-xs-6
        .col-lg-4.col-md-4.col-sm-6.col-xs-6
        .col-lg-4.col-md-4.col-sm-6.col-xs-6
          
